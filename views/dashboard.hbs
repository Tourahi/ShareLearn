<h1>dashboard</h1>
<h3>Welcome {{name}}</h3>
{{#if lessons}}
  <table class="striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Date</th>
        <th>Status</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        {{#each lessons}}
          <tr>
            <td> <a href="/lessons/{{_id}}">{{title}}</a></td>
            <td>{{formatDate createdAt 'MMMM Do YYYY,h:mm:ss a'}}</td>
            <td> <span class="dash-status">{{status}}</span> </td>
            <td>
              <a href="/lessons/edit/{{_id}}" class="btn btn-float">
                <i class="fa fa-edit"></i>
              </a>
              <form id="delete-form" action="/lessons/{{_id}}" method="post">
                <input type="hidden" name="_method" value="DELETE">
                <button type="submit" class="btn red">
                  <i class="fas fa-trash"></i>
                </button>
              </form>
            </td>
          </tr>
        {{/each}}
      </tr>
    </tbody>
  </table>
{{else}}
  <p>You have no lessons yet.</p>
{{/if}}

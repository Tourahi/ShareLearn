<h1>Lessons</h1>
<div class="row">
  {{#each lessons}}
    <div class="col 12 m4">
        <!-- CARD -->
        <div class="card">
        <div class="card-image">
          {{{editIcon user ../user _id }}}
        </div>
        <div class="card-content center-align">
          <h5>{{title}}</h5>
          <!-- <p>{{stripTags (truncate body)}}</p> -->
          <br>
          <div class="chip">
            <img src="{{imge}}" />
            <a href="/lessons/user/{{../user._id}}">{{../user.displayName}}</a>
          </div>
        </div>
        <div class="card-action center-align">
          <a href="/lessons/{{_id}}" class="btn grey">Read More</a>
        </div>
      </div>
    </div>
  {{else}}
    <p>No lessons found.</p>
  {{/each}}
</div>
